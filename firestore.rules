rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Colecciones publicas del portfolio

    match /projects/{project} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Coleccion real es experiences (no experience)
    match /experiences/{exp} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    match /skills/{skill} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    match /services/{service} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    match /interests/{interest} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    match /competencies/{competency} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Documentos unicos (singleton)

    match /profile/{doc} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    match /contact/{doc} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    match /settings/{doc} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // CV - solo autenticado

    match /cv_education/{doc} {
      allow read, write: if request.auth != null;
    }

    match /cv_languages/{doc} {
      allow read, write: if request.auth != null;
    }

    // Denegar todo lo no declarado
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
